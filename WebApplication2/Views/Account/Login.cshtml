@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}
<style>
    .remCss 
    {
        text-align:right!important;
        direction:ltr!important;
    }
    .labCss {
        direction:ltr;
    }
    .form-group {
        margin-bottom: 15px;
        direction: rtl;
        text-align: right;
    }
    .customR{
        text-align:center;
        margin-bottom:10px;
        margin-top:-30px;
        font-size:20px;
    }
    .form-bottom {
        background: #195b84!important;
        /*background: #66ccff !important;*/
    }
    button.btn {
        background: #ff471a!important;
    }
    a {
        color:white!important;
    }
</style>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ورود/خروج شایگان تدبیر</title>
    <!-- CSS -->
    @*<link href="~/lib/adminlte_rtl/dist/css/AdminLTE-rtl.css" rel="stylesheet" />*@
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:400,100,300,500">
    <link rel="stylesheet" href="~/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/assets/css/form-elements.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Favicon and touch icons -->
    <link rel="shortcut icon" href="assets/ico/favicon.png">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/assets/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/assets/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/assets/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="~/assets/ico/apple-touch-icon-57-precomposed.png">
</head>
<body>
    <!-- Top content -->
    <div class="top-content">
        <div class="inner-bg">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3 text" style="
    background-color: #0b71a9;">
                        <h1>شایگان تدبیر پارسیان</h1>
                        @*<div class="description">
                        </div>*@
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3 form-box">
                        <div class="form-top">
                            <div class="form-top-left">
                                <h3>خوش آمدید</h3>
                                <p>لطفا نام کاربری و رمز عبور خود را وارد نمایید:</p>
                            </div>
                            <div class="form-top-right">
                                <i class="fa fa-key"></i>
                            </div>
                        </div>
                        <div class="form-bottom">
                            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="login-form" id="formId">
                                <div class="form-group">
                                    <label asp-for="UserName" class="sr-only">Username</label>
                                    <input asp-for="UserName" type="text" placeholder="نام کاربری..." class="form-username form-control rtlClass" id="form-username">
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password" class="sr-only" @*for="form-password" *@>Password</label>
                                    <input asp-for="Password" type="password" name="password" placeholder="کلمه عبور..." class="form-password form-control rtlClass" id="form-password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div class="remCss">
                                        <label asp-for="RememberMe" class="labCss">
                                            @Html.DisplayNameFor(m => m.RememberMe)
                                        </label>
                                        <input asp-for="RememberMe" />
                                    </div>
                                </div>
                                <div class="form-group customR"> 
                                    <a asp-area="" asp-controller="Account" asp-action="Register">ثبت نام کنید</a>
                                </div>
                                <button type="submit" id="btnLogin" class="btn">ورود</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Javascript -->
    <script src="~/assets/js/jquery-1.11.1.min.js"></script>
    <script src="~/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/assets/js/jquery.backstretch.min.js"></script>
    <script src="~/assets/js/scripts.js"></script>

    <!--[if lt IE 10]>
        <script src="assets/js/placeholder.js"></script>
    <![endif]-->
</body>
</html>


