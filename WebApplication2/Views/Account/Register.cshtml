@model RegisterViewModel
@{
    ViewData["Title"] = "فرم ثبت نام";
}
<style>
    .cs {
        border:1px solid black!important;
      
    }
</style>

<h2>@ViewData["Title"]</h2>

<div class="row ">
    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
        @*<div class="col-md-4 col-md-push-8 col-lg-4 col-md-push-8 col-sm-6 col-push-6">*@
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            @*<h2>@ViewData["Title"]</h2>*@
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control cs" style="color:black!important;border:1px solid red;" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control cs" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control cs" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">ثبت</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
